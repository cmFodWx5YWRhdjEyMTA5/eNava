<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_notification_left"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_noti_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="14sp"
        android:layout_toLeftOf="@+id/img_notification_right"
        android:layout_toRightOf="@+id/img_notification_left" />


    <ImageView
        android:id="@+id/img_notification_right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/notifi_logo"
        android:padding="10dp" />

</RelativeLayout>